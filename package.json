    "stylelint": "10.1.x",
    "stylelint-config-htmlacademy": "0.1.x",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "yargs": "^13.2.2"
